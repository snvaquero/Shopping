@model Shopping.Data.Entities.City

@{
    ViewData["Title"] = "Delete";
}

<h1>Borrar</h1>

<h3>¿Estas seguro de querer borrar?</h3>
<div>

    <partial name="_CityDetails" />
    <form asp-action="DeleteCity">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Borrar" class="btn btn-outline-danger" /> |
        <a asp-action="DetailsState" class="btn btn-outline-success" asp-route-id="@Model?.State.Id">Regresar</a>
    </form>
</div>
